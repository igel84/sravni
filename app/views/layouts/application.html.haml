!!!
%html
  %head
    %title Сравним-ка
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    %link{:rel=>"shortcut icon", :href=>'/assets/favicon.ico'}
    = csrf_meta_tags
  %body
    .container
      .row
        .span12
          .navbar.navbar-static-top
            .navbar-inner
              .container
                %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
                  %span.icon-bar
                  %span.icon-bar
                  %span.icon-bar
                = link_to "Сравним-ка", root_path, class: 'brand'
                %ul.nav
                  %li.divider-vertical
                  %li.dropdown
                    %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                      = @city == nil ? 'Выберите город' : @city.name
                      %b.caret
                    %ul.dropdown-menu
                      - City.all.each do |city|
                        %li
                          = link_to city.name, {controller: 'home', action: 'wellcom', city: city}
                  %li.active
                    %a{:href => "#"} главная
                  %li
                    %a{:href => "#"} какая-нибудь
                  %li
                    %a{:href => "#"} другая                                   
                %ul.nav.pull-right
                  %li.divider-vertical
                  %li.dropdown
                    %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                      Личный кабинет
                      %b.caret
                    %ul.dropdown-menu
                      - if current_user
                        %li
                          = link_to edit_user_path(current_user) do
                            %i.icon-user
                            профиль
                        %li
                          = link_to '' do
                            %i.icon-envelope
                            подписка
                        %li
                          = link_to '' do
                            %i.icon-eye-open
                            реклама
                        %li
                          = link_to '' do
                            %i.icon-globe
                            друзья
                        %li
                          = link_to logout_path do
                            %i.icon-remove-circle
                            выход                         
                      - else
                        %li= link_to "вход", login_path
                        %li= link_to "регистрация", signup_path  
      .row
        .span12= image_tag 'top.jpg', width:940, hight:80
      .row-fluid   
        .span10
          %br/
          - flash.each do |name, msg|
            = content_tag :div, msg, class:"alert alert-info"
          = yield          
        .span2
          -#%br/
          -#%button.btn.btn-info{style:'width:130px'} дать рекламу
          -#%br/
          %br/
          = link_to(image_tag("banner-mlip.png", class:"img-rounded"), 'http://mlip.ru', target:'_blank')
          %br/
          %br/
          = image_tag "banner.jpg", class:"img-rounded"
          %br/
          %br/
          = image_tag "banner.jpg", class:"img-rounded"