  %body
    .container
      .row
        .span12
          .navbar.navbar-static-top
            .navbar-inner
              .container
                %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
                  %span.icon-bar
                  %span.icon-bar
                  %span.icon-bar
                %a.brand{:href => "#"} название или логотип
                %ul.nav
                  %li.active
                    %a{:href => "#"} главная
                  %li
                    %a{:href => "#"} какая-нибудь
                  %li
                    %a{:href => "#"} другая
                  %li.dropdown
                    %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                      Воронеж
                      %b.caret
                    %ul.dropdown-menu
                      - City.all.each do |city|
                        %li
                          %a{:href => "#"}= city.name                  
                %ul.nav.pull-right
                  %li.divider-vertical
                  %li.dropdown
                    %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                      Личный кабинет
                      %b.caret
                    %ul.dropdown-menu
                      - if current_user
                        %li= link_to "выход", logout_path
                      - else
                        %li= link_to "вход", login_path                      
                        %li= link_to "регистрация", signup_path  
